<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/dicepic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dice_empty"
        android:layout_centerInParent="true"
        tools:src="@drawable/dice2"
        />

    <Button
        android:id="@+id/roll_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/margin_button_four"
        android:layout_marginTop="@dimen/margin_button_four"
        android:layout_marginEnd="@dimen/margin_button_four"
        android:layout_marginBottom="@dimen/margin_button_four"
        android:text="@string/button_text" />

</RelativeLayout>